<p id="notice"><%= notice %></p>

<h1 class="page-header">Chat Center&nbsp&nbsp<span class="glyphicon glyphicon-envelope"></span></h1>

<div class="fluid-container" style="margin-top: 30px">
    	<div class="row">
    	<div class="col-sm-2" style="position: fixed; top: 150px; left: 0;">
    		<% if user_signed_in? %>   		
    		<h5>Users&nbsp&nbsp<span class="glyphicon glyphicon-user"</span></h5>
    		<ul>
    			<% (User.all - [current_user]).each do |user| %>
    				<li><div class="round-image-50"><%= image_tag(user.avatar.url(:thumb)) %></div><%= link_to user.username, direct_message_path(user.id), data: {behavior: "chatroom-link", chatroom_id: Chatroom.direct_message_for_users([current_user, user]).id} %></li>  		
    			<% end %>
    		</ul>
    		<% else %>
    		<br><br><strong><h3>Please Sign in to use the Chat Center</h3></strong>
    		<% end %>    	
    	</div>
    	
    	<div class="col-sm-10 col-sm-offset-2">    	
    <%= yield %>
    </div>
    </div>

